<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.flatbuffer.activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:text="FlatBuffer"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:onClick="loadFromFlatBuffer"
        android:text="loadFromFlatBuffer"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:onClick="loadFromGson"
        android:text="loadFromGson"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:onClick="loadFromFastJson"
        android:text="loadFromFastJson"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:onClick="loadFromAndroidJson"
        android:text="loadFromAndroidJson"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>
    <TextView
        android:id="@+id/textViewFlat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/textViewJson"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>
    <TextView
        android:id="@+id/textViewFastJson"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>
    <TextView
        android:id="@+id/textViewAndroidJson"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="4dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="13dp"/>

</LinearLayout>
