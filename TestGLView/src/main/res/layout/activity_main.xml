<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launcher_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff0000"

    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <example.com.testchengjianview.TestFrameLayout
        android:id="@+id/launcher_first"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3f0000ff"
        app:pageIndicator="@+id/launcher_second"
        app:pageSpacing="1dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="bbbbbb"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:text="tttttt"
            android:textColor="#000000"
            />
    </example.com.testchengjianview.TestFrameLayout>

    <FrameLayout
        android:id="@+id/launcher_second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3f00ff00"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:gravity="bottom"
            android:text="ccccccc"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:gravity="top"
            android:text="jjjj"
            android:textColor="#000000"
            />
    </FrameLayout>
</FrameLayout>
