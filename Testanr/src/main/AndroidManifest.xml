<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="letv.com.testanr"
          android:sharedUserId="com.example.uid">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/letv_app_theme"
        >
        <activity
            android:name=".MyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LetvSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadingActivity"
            android:alwaysRetainTaskState="false"
            android:excludeFromRecents="true"
            android:launchMode="singleTask"
            android:process=":loading"
            android:screenOrientation="portrait"
            android:theme="@style/LetvSplash"/>

        <receiver
            android:name=".MyStaticReceiverA">
            <!--<intent-filter android:priority="5">-->
                <!--<action android:name="android.intent.action.mystaticreceiver"/>-->

                <!--<category android:name="android.intent.category.DEFAULT"/>-->
            <!--</intent-filter>-->
            <intent-filter android:priority="5">
                <action android:name="android.intent.action.MyStaticReceiverA"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name=".MyStaticReceiverB"
            android:process=":loading">
            <intent-filter android:priority="9">
                <action android:name="android.intent.action.mystaticreceiver"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".MyService"
            android:exported="true"
            android:process=":loading">
            <intent-filter>
                <action android:name="test.service"/>
            </intent-filter>
        </service>
        <service
            android:name=".GrayInnerService"
            android:process=":remote">
        </service>
        <service
            android:name=".MessengerService"
            android:process=":remote">
        </service>
        <service
            android:name=".MyJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:process=":remote">
        </service>
    </application>

</manifest>