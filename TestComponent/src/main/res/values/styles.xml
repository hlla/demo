<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FirewallSettingsStyleApp" parent="android:Theme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/holo_red_dark</item>
    </style>

    <style name="activity_theme" parent="android:Theme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/holo_blue_bright</item>
    </style>

    <style name="default_style">
        <item name="@android:windowEnterAnimation">@anim/enter_anim</item>
        <item name="@android:windowExitAnimation">@anim/exit_anim</item>
    </style>

    <style name="default_style_image">
        <item name="@android:windowEnterAnimation">@anim/enter_anim_image</item>
        <item name="@android:windowExitAnimation">@anim/exit_anim</item>
    </style>
</resources>
